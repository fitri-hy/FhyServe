{
  "name": "fhyserver",
  "version": "1.0.1",
  "description": "FhyServe is a portable multi-server runtime platform designed to simplify local web application development without the need for global installation.",
  "keywords": [
    "server",
    "localhost",
    "development",
    "multi-server",
    "apache",
    "nginx",
    "php",
    "nodejs",
    "electron",
    "fhyserver",
    "runtime",
    "web-server"
  ],
  "author": "FhyLabs Group",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "build:css": "tailwindcss -i ./templates/css/tailwind.css -o ./templates/css/styles.css",
    "watch:css": "tailwindcss -i ./templates/css/tailwind.css -o ./templates/css/styles.css --watch",
    "start": "npm run build:css && electron .",
    "dev": "concurrently \"npm run watch:css\" \"electron .\"",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.fhylabs.fhyserve",
    "productName": "FhyServer",
    "copyright": "Copyright Â© 2025 FhyLabs",
    "icon": "templates/images/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!config/**",
      "!resources/**",
      "!public_html/**"
    ],
    "extraResources": [
      {
        "from": "config",
        "to": "config"
      },
      {
        "from": "resources/apache",
        "to": "apache"
      },
      {
        "from": "resources/git",
        "to": "git"
      },
      {
        "from": "resources/mysql",
        "to": "mysql"
      },
      {
        "from": "resources/nginx",
        "to": "nginx"
      },
      {
        "from": "resources/nodejs",
        "to": "nodejs"
      },
      {
        "from": "resources/php",
        "to": "php"
      },
      {
        "from": "resources/php-fpm",
        "to": "php-fpm"
      },
      {
        "from": "resources/python",
        "to": "python"
      },
      {
        "from": "public_html",
        "to": "public_html"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "templates/images/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Development",
      "icon": "templates/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "axios": "^1.10.0",
    "chokidar": "^4.0.3",
    "find-process": "^1.4.10",
    "http-proxy": "^1.18.1",
    "marked": "^15.0.12",
    "mysql2": "^3.14.1",
    "node-cron": "^4.1.1",
    "pidusage": "^4.0.1",
    "tree-kill": "^1.2.2",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.17"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fitri-hy/FhyServe.git"
  },
  "bugs": {
    "url": "https://github.com/fitri-hy/FhyServe/issues"
  },
  "homepage": "https://fhylabs.com"
}
